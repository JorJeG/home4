extends layout

block content
  body.page-main
    aside.main-aside
      ul.branch-list
        each branch in branches
          li.branch-item
            if branch.selected
              a.branch-item__link.branch-item__link_color_red(href=`/${branch.name}/${commits[0].hash}/`)= branch.name
            else
              a.branch-item__link.branch-item__link_color_green(href=`/${branch.name}/${commits[0].hash}/`)= branch.name
      if lastPath
        a(href=`${fileUrl}`) Back
      ul.files-list
        each file in sortedFiles
          li.files-item
            if file.type === 'blob'
              a.files-item__link.files-item__link_color_blue(href=`/blob/${file.hash}/`)= file.name
            else
              a.files-item__link.files-item__link_color_darkgreen(href=`${curUrl}${file.hash}/`)= file.name
    ul.commit-list
      each commit in commits
        li.commit-item
          a.commit-item__link(href=`/${branch}/${commit.hash}/`)= commit.title
